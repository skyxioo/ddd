<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initail-scale=1.0"/>
    <title>@ViewBag.Title</title>
    <!-- 设置关键词、描述 -->
    <meta content="奔跑的蜗牛个人技术博客" name="description">
    <meta content="奔跑的蜗牛，技术博客" name="keywords">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--如果有高版本IE，则用高版本渲染-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/index.css" rel="stylesheet" />    
    @RenderSection("css", required: false)

    <script src="~/Scripts/jquery-1.9.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Content/js/jquery.praise.js"></script>
    <script src="~/Content/js/bootstrap3-typeahead.js"></script>
    <script src="~/Content/js/index.js"></script>    
    @RenderSection("headScript", required: false)

    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Content/js/ie/modernizr-2.6.2.js")></script>
        <script src="@Url.Content("~/Content/js/ie/respond.min.js")></script>
        <script src="@Url.Content("~/Content/js/ie/html5shiv.js")></script>
    <![endif]-->
</head>
<body class="nav-fixed">
    <!--加载导航栏-->
    @{ Html.RenderPartial("_Navbar"); }
    
    <!--主体内容部分-->
    <div id="zyn-bodyer">
        <!--.container 类用于固定宽度并支持响应式布局的容器。-->
        <div class="container">
            <!--row必须包含在.container（固定宽度）或 .container-fluid （100% 宽度）中,通过row在水平方向创建一组column12个-->
            <!--主体-->
            <div class="row">
                <div id="mainbody" class="col-md-8">
                    <div id="ie-warning" class="alert alert-danger fade in">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <span class="glyphicon glyphicon-exclamation-sign"></span> 请注意，本站并不支持低于IE8的浏览器，为了获得最佳效果，推荐使用FireFox浏览器。
                    </div>
                    <!-- 内容主体 包含三部分内容：1.每日提示、2.文章列表、3. 分页条-->
                    @RenderBody()   @*子视图：这一部分包含：每日提示和文章列表*@
                </div>
                <div id="sidebar" class="col-md-4">
                    @RenderSection("aside", required: false)
                </div>
            </div>
        </div>
    </div>

    <!--底部版权申明部分-->
    <footer id="zyn-footer" class="footer navbar-fixed-bottom">
        <div class="container">
            Copyright © @DateTime.Now.Year <a href="javascript:void(0);">Running snail</a>&nbsp; | &nbsp;联系我 :
            <a href="mailto:ograss@qq.com">ograss@qq.com</a>&nbsp; | &nbsp;All Rights Reserved.&nbsp; | &nbsp;粤ICP备18005892号-1
        </div>
    </footer>

    <!--回到顶部-->
    <div class="rollbar">
        <ul>
            <li>
                <a href="/">
                    <img width="64" height="64" src="/Content/images/ico-rocket.png" />
                </a>
            </li>
        </ul>
    </div>

    @RenderSection("endScript", required: false)
</body>
</html>
